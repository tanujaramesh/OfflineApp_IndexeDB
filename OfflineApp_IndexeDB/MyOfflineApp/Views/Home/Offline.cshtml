
@{
    ViewBag.Title = "";
}

<h2>Offline</h2>
<script type="text/javascript">
    window.rootUrl = "@Url.Content("~/")";
</script>
<link rel="stylesheet" href="~/Content/jquery-ui.css" type="text/css" media="all" />
<style type="text/css">
            /*body
        {
            font-size: 105%;
        }*/
        
    label, input
        {
            display: block;
        }
    input.text
        {
            margin-bottom: 12px;
            padding: .4em;
            width: 95%;
        }
    fieldset
        {
            border: 0;
            margin-top: 25px;
            padding: 0;
        }
    h1
        {
            font-size: 1em;
            margin: .6em 0;
        }
    table
        {
            border-collapse: collapse;
            margin: 1em 0;
        }
    div table td:last-child, table th:last-child {
                width:auto;
            }
    table td, table th
        {
            border: 1px solid #eee;
            padding: .6em 3px;
            text-align: left;
        }
    .ui-widget {
        font-size: small;
    }
    div table td:last-child, table th:last-child
        {
            width: 200px;
        }      
    .ui-dialog .ui-state-error {
        padding: .3em;
    }
    .validateTips {
        border: 1px solid transparent;
        padding: 0.3em;
    }
    .invisible {
        display: none;
    }
</style>

<script src="~/Scripts/jquery.min.js"></script>
<script src="~/Scripts/jquery-ui.min.js" type="text/javascript"></script>
<script src="~/Scripts/modernizr-2.6.2.js"></script>
<script src="~/Scripts/IndexedDBShim.js"></script>
<script src="~/Scripts/Linq2IndexedDB.js"></script>
<script src="~/Scripts/bootstrap-notify.min"></script>
<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css" rel="stylesheet">
<link href="~/Content/dist/css/roboto.min.css" rel="stylesheet">
<link href="~/Content/dist/css/material-fullpalette.min.css" rel="stylesheet">
<link href="~/Content/dist/css/ripples.min.css" rel="stylesheet">
<link href="//fezvrasta.github.io/snackbarjs/dist/snackbar.min.css" rel="stylesheet">http://ironsummitmedia.github.io/startbootstrap-simple-sidebar/#
<meta name="viewport" content="width=device-width, initial-scale=1">
<style>
    #dialog h2 {
        padding: 14px;
        margin: 0;
        font-size: 16px;
        font-weight: 400;
    }
</style>

<div style="width: 100%; text-align: center; clear: both; padding-top: 10px">
    <div id="contentHolder" style="margin: 0 auto; width: 600px; padding-bottom:20px;">
    </div>
    <div class="bs-docs-section">

        <div class="row">
            <div class="col-lg-12">
                <div class="bs-component">
                    <div class="jumbotron">
                        <button id="btnAddCustomer" class="btn btn-primary btn-lg">
                            Add Customer
                        </button>
                        <button id="btnDeleteDB" class="btn btn-primary btn-lg">
                            Clear Local DB
                        </button>
                        <button id="btnSyncLocal" class="btn btn-primary btn-lg">
                            Sync Local DB from Server DB
                        </button>
                        <button id="btnSyncServer" class="btn btn-primary btn-lg">
                            Sync Server DB from Local DB
                        </button>
                        <button id="btnTestConnection" class="btn btn-primary btn-lg">
                            Test Server Connection
                        </button>
                    </div>
                </div>
            </div>
        </div>


        <div id="dialog-form" title="Add new customer">
            <form>
                <fieldset>
                    <label for="Id" id="lblId" class="invisible">
                        ID
                    </label>
                    <input type="number" name="Id" id="txtId" value="" class="text ui-widget-content ui-corner-all invisible" />
                    <label for="Name" id="lblName">
                        Name
                    </label>
                    <input type="text" name="Name" id="txtName" class="text ui-widget-content ui-corner-all" />
                    <label for="Email" id="lblEmail">
                        Email
                    </label>
                    <input type="email" name="Email" id="txtEmail" value="" class="text ui-widget-content ui-corner-all" />
                    <label for="Phone" id="lblPhone">
                        Phone
                    </label>
                    <input type="tel" name="Phone" id="txtPhone" value="" class="text ui-widget-content ui-corner-all" />
                </fieldset>
            </form>
        </div>
    </div>
</div>
<script src="~/Scripts/dbOperations.js"></script>